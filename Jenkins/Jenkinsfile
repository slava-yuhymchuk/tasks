pipeline {
    agent any
    stages {
        stage ("Build") {
            steps {
                echo "Building the application..." 
            }
        }
        stage ("Test") {
            steps {
                echo "Building the application..."
            }
        }
        stage ("Deploy") {
            when {
                expression {
                    BRANCH_NAME == "dev"
                }
            }
            steps {
                echo "Deploying the application to DEV EKS cluster..."
            }
            when {
                expression {
                    BRANCH_NAME == "main"
                }
            }
            steps {
                echo "Deploying the application to PROD EKS cluster..."
            }
        }
    }
    post {
        always {

        }
        success {

        }
        failure {

        }
    }
}
